# Navigation
alias desk="cd ~/Desktop"
alias notes="cd ~/.notes"
alias wiki="nvim ~/.notes/index.wiki"
alias doc="cd ~/Documents"
alias v="nvim"
alias vi="nvim"
alias home="cd ~"
alias recetas="cd ~/Library/Mobile\ Documents/iCloud~com~conradstoll~Grocery/Documents/Recipes"
